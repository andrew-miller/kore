<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/button_new_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_new_field" />

            <Button
                android:id="@+id/button_delete_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_delete_field"
                android:visibility="invisible" />

            <Button
                android:id="@+id/button_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_done" />

            <Button
                android:id="@+id/button_change_domain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button_change_codomain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </HorizontalScrollView>
    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="wrap_content" >
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/layout_fields"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:orientation="vertical" >

        </LinearLayout>

    </HorizontalScrollView>
	</ScrollView>
</LinearLayout>